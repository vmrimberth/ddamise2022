{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], 
    "rewrites": [
      {
        "source": "**",
        "destination": "/public/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 8080
    }
  }
}
